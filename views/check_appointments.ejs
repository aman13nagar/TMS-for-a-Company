  <style>
    table {
        border-collapse: collapse;
        margin-top:10px;
        margin-bottom:15px
    }
    th, td {
        border: 1.3px solid yellow;
        padding: 8px;
        text-align: left;
    }
    th {
        background-color:black;
    }
  </style>
  <h2 class="ah">Appointments</h2>
  <div class="appointment">
    <div class="persondetails">
      <% let i=1 %>
      <% username.forEach(person => { %>
        <div class="appointmentdetails">
          <h3 class="ah1">Appointment: <%=i%></h3>
          <div class="appdetails">
            <li>Username: <%= person.username%></li>
            <li>Email: <%= person.invitedPersons %></li>
            <li>Venue: <%= person.venue%></li>
            <li>Date and time: <%= person.dateTime%></li>
            <li>Duration: <%= person.duration%></li>
            <li>Project: [<%=person.project%>,<%=person.project_id%>]</li>
            <li>Purpose: <%= person.purpose%></li>
          </div>
        </div>
        <%i=i+1%>
      <% }); %>
    </div>
  </div>